{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "@core/*": [
        "./src/core/*"
      ],
      "@/*": [
        "./src/*"
      ],
    }
  },
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}